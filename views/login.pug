extends layout

block content
  div.text-center
    h1 #{title}
    hr

  form(method='post' action='')
    div.row
      div.col-xs-2.col-md-3
        //- Spacing col
        
      div.form-group.col-xs-8.col-md-6
        label(for='username') Username
        input#username.form-control(autofocus type='text', placeholder='Username', name='username' value=(undefined===user ? '' : user.username))

      div.col-xs-2.col-md-3
        //- Spacing col
        
    div.row
      div.col-xs-2.col-md-3
        //- Spacing col
        
      div.form-group.col-xs-8.col-md-6
        label(for='password') Password
        input#password.form-control(type='password', placeholder='Password', name='password' value=(undefined===user ? '' : user.password))

      div.col-xs-2.col-md-3
        //- Spacing col
        
    div.text-center.row
      div.col-xs-2.col-md-3
      div.col-xs-8.col-md-6
        button#button_login.btn.btn-primary.btn-full-width(type='submit') Login
      div.col-xs-2.col-md-3
        
    if errors
      ul
        for error in errors
          li!= error.msg
